{
    "name": "@cxgdev/scorekeeper",
    "version": "0.1.0-alpha.1",
    "description": "A TypeScript module for interfacing with Daktronics scoreboard controllers.",
    "repository": {
        "type": "git",
        "url": "https://github.com/cxgdev/scorekeeper"
    },
    "homepage": "https://github.com/cxgdev/scorekeeper#readme",
    "bugs": {
        "url": "https://github.com/cxgdev/scorekeeper/issues"
    },
    "publishConfig": {
        "access": "public",
        "provenance": true,
        "tag": "alpha"
    },
    "license": "GPL-3.0-only",
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        },
        "./daktronics": {
            "types": "./dist/daktronics/index.d.ts",
            "import": "./dist/daktronics/index.js",
            "require": "./dist/daktronics/index.cjs"
        }
    },
    "typesVersions": {
        "*": {
            "daktronics": [
                "dist/daktronics/index.d.ts"
            ]
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:unit": "vitest run --dir test/unit",
        "test:int": "vitest run --dir test/integration",
        "test:ci": "echo Not implemented.",
        "lint": "eslint . --ext .ts",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "prepare": "npm run build"
    },
    "devDependencies": {
        "@eslint/js": "^9.33.0",
        "@types/node": "^24.2.1",
        "@typescript-eslint/eslint-plugin": "^8.39.0",
        "@typescript-eslint/parser": "^8.39.0",
        "@vitest/coverage-v8": "^3.2.4",
        "eslint": "^9.33.0",
        "eslint-config-prettier": "^10.1.8",
        "globals": "^16.3.0",
        "prettier": "^3.6.2",
        "tsup": "^8.5.0",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.39.0",
        "vitest": "^3.2.4"
    },
    "dependencies": {
        "serialport": "^13.0.0"
    }
}
